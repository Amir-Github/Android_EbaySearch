<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/gray"
                android:angle="270" />
            <stroke
                android:width="5dp"
                color="@color/gray" />
            <corners
                android:radius="10dp" />
             <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />  
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/gray"
                android:startColor="@color/white"
                android:angle="90" />
            <stroke
                android:width="3dp"
                color="@color/white" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>
